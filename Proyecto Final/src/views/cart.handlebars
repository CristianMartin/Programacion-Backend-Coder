<div class="container">
    <h2 class="text-uppercase text-center text-muted m-4">
        Carro de compras
    </h2>
    <div className="container mt-4 mb-5">
    <div id="bodyCarrito" className="row">
        {{#if products}}
            {{#each products}}
                <div class="card card-w ms-4">
                    <div class="h-50">
                    <img src={{this.thumbnails}} class="card-img-top p-4" alt={{this.title}}>
                    </div>
                    <div class="card-body p-4">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">ID: {{this._id}}</li>
                        <li class="list-group-item">CODE: {{this.code}}</li>
                        <li class="list-group-item">PRICE: ${{this.price}}</li>
                        <li class="list-group-item">STOCK: {{this.stock}}</li>
                        <li class="list-group-item">CATEGORY: {{this.category}}</li>
                    </ul>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div>
                <h2 class="text-secondary text-opacity-75 text-center">
                    ¡Tu carrito está vacío!
                </h2>
            </div>
        {{/if}}
    </div>
    </div>
        {{#if products}}
            <div>
                <h5 class="text-center m-4">
                Costo total: <span>${totalCost}</span>
                </h5>
                <div class="d-flex justify-content-center pb-5">
                <button class="btn btn-danger pr-4 ms-4" onClick={emptyCart}>
                    Vaciar carrito
                </button>
                <button class="btn btn-dark pr-4 ms-4" onClick={realizarCompra}>
                    Realizar compra
                </button>
                </div>
            <div/>
        {{/if}}
<div/>